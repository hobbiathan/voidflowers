      		}
      	}


      	function makePlants() {
      		var count = dRandomIn(2, 4);
      		console.log("\nmaking " + count + " plants");
      		var time = plantStep;
      		var placement = 11;
      		while (placement < plantWidth - 12) {
      			var flowering = dRandomInt(2);
      			var maxHeight;
      			var startOffset = -dRandomInt(5) - 1;
      			console.log("start offset = " + startOffset);
      			if (flowering == 0)
