<style>
  div {
      width: 200px;
      height: 100px;

      position: absolute;
      top:0;
      bottom: 0;
      left: 0;
      right: 0;

      margin: auto;
  }

  p {
    font-family: Courier;
  }

  .absolute-center {

	margin: auto;
	position: absolute;
	top: 0; left: 0; bottom: 0; right: 0;

}
</style>

<% flash.each do |type, msg| %>
    <p><%= msg %></p>
<% end %>

<% if @user %>

  <p>logged in as: <%= Current.user.username %></p>
  <p><%= button_to "logout", logout_path, method: :delete %></p>
  <% if !(Current.user.avatar.nil?) %>
    <img src="<%= url_for(Current.user.avatar) %>" width="512" height="512" class="absolute-center">
  <% end %>

<% else %>
<body>
  <div>
  <p>access restricted.</p>
  </div>
</body>
<% end %>
