<style>
  div {
      width: 200px;
      height: 100px;

      position: absolute;
      top:0;
      bottom: 0;
      left: 0;
      right: 0;

      margin: auto;
  }

  p {
    font-family: Courier;
  }

  .absolute-center {

	margin: auto;
	position: absolute;
	top: 0; left: 0; bottom: 0; right: 0;

}
</style>


<body>
  <% flash.each do |type, msg| %>
    <p style="text-align: center; "><%= msg %></p>
  <% end %>
  <div>
    <p>
    </p>
    <%= form_with url: login_path, local: :true do |form| %>
      <p>
        <%= form.label :username %></br>
        <%= form.text_field :username %> </br></br>
        <%= form.label :password %><br/>
        <%= form.text_field :password %></br></br>

        <%= form.submit "login" %>
      </p>
    <% end %>
  </div>
</body>
